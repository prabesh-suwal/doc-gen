{
  "name": "doc-gen",
  "version": "1.0.0",
  "description": "DOCX Template Processing Engine - Patches JSON data into DOCX templates",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["docx", "template", "pdf", "document-generation"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "docxtemplater": "^3.50.0",
    "pizzip": "^3.1.7",
    "docxtemplater-image-module-free": "^1.1.1",
    "angular-expressions": "^1.2.1",
    "express": "^4.21.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "zod": "^3.23.8",
    "dayjs": "^1.11.13",
    "image-size": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.13",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "prettier": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
